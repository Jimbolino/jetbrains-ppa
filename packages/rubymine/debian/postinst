#!/bin/bash

set -e

cd /opt/

# Create folder
mkdir -p "rubymine"

# Move downloaded .tar.gz
mv "rubymine-2017.2.3.tar.gz" "rubymine"

cd "rubymine"

# Extract the package
tar -xzf "rubymine-2017.2.3.tar.gz" --strip-components 1

# Remove the tar.gz package
rm -f "rubymine-2017.2.3.tar.gz"

##DEBHELPER##
