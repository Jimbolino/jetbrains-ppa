{
  "product_code": "PS",
  "exe_file": "bin/phpstorm.sh",
  "app_name": "PhpStorm",
  "startup_wm_class": "jetbrains-phpstorm",
  "java_export": "PHPSTORM_JDK",
  "package_name": "phpstorm",
  "package_desc": "Lightning-smart PHP IDE.",
  "package_desktop_file": [
    "[Desktop Entry]",
    "Name=§{app_name}",
    "Comment=§{package_desc}",
    "Exec=§{package_name} %u",
    "Icon=§{package_name}",
    "Terminal=false",
    "Type=Application",
    "Categories=Development;IDE;",
    "StartupWMClass=§{startup_wm_class}"
  ],
  "package_exe_file": [
    "#!/bin/sh",
    "export §{java_export}=\"$JAVA_HOME\"",
    "exec \"/opt/§{package_name}/§{exe_file}\" \"$@\""
  ]
}
